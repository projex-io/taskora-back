name: Create Release on Merge

on:
  pull_request:
    types: [closed]
    branches:
      - main

jobs:
  create_release:
    if: github.event.pull_request.merged == true && contains(github.event.pull_request.labels.*.name, 'release')
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Git
        run: |
          git config user.name "github-actions"
          git config user.email "github-actions@github.com"

      - name: Extract tag from PR branch name
        id: tag
        run: |
          BRANCH_NAME="${{ github.event.pull_request.head.ref }}"
          if [[ "$BRANCH_NAME" =~ ^rel/v([0-9]+\.[0-9]+\.[0-9]+)$ ]]; then
            TAG="${BASH_REMATCH[0]}"
            echo "TAG=$TAG" >> $GITHUB_ENV
            echo "tag=$TAG" >> $GITHUB_OUTPUT
          else
            echo "Invalid branch name '$BRANCH_NAME'. Must match rel/vX.Y.Z"
            exit 1
          fi

      - name: Create Git tag and push
        run: |
          git tag "$TAG"
          git push https://x-access-token:${{ secrets.PAT_TOKEN }}@github.com/${{ github.repository }} "$TAG"
        env:
          TAG: ${{ env.TAG }}

      - name: Create GitHub release
        uses: softprops/action-gh-release@v2
        with:
          tag_name: ${{ steps.tag.outputs.tag }}
          name: Release ${{ steps.tag.outputs.tag }}
          generate_release_notes: true
        env:
          GITHUB_TOKEN: ${{ secrets.PAT_TOKEN }}

      - name: Build and push Docker image
        run: |
          echo "Build and push docker image with tag: $TAG"
          # Exemple: docker build -t ghcr.io/OWNER/REPO:$TAG .
          # docker push ghcr.io/OWNER/REPO:$TAG
